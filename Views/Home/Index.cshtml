@{
    ViewBag.Title = "Agenda";
    System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo("pt-BR");
    System.Threading.Thread.CurrentThread.CurrentCulture = culture;
    System.Threading.Thread.CurrentThread.CurrentUICulture = culture;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Estilos do calendário */
        .calendar {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 5px;
        }

        .day {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
            height: 60px;
        }

        .today {
            background-color: lightblue;
        }

        /* Efeito de hover */
        .day:hover {
            background-color: rgba(200, 200, 200, 0.5);
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="card p-4 shadow">
            <h2>@ViewBag.Title</h2>
            <h3>@ViewBag.CurrentDate.ToString("MMMM yyyy")</h3>

            <div>
                <a href="@Url.Action("Index", new { month = ViewBag.CurrentDate.AddMonths(-1).Month, year = ViewBag.CurrentDate.AddMonths(-1).Year })" class="btn btn-primary mr-2">&lt; Mês Anterior</a>
                <a href="@Url.Action("Index", new { month = ViewBag.CurrentDate.AddMonths(1).Month, year = ViewBag.CurrentDate.AddMonths(1).Year })" class="btn btn-primary ml-2">Próximo Mês &gt;</a>
                <a href="@Url.Action("Index", new { month = ViewBag.CurrentDate.Month, year = ViewBag.CurrentDate.Year - 1 })" class="btn btn-secondary mr-2">&lt; Ano Anterior</a>
                <a href="@Url.Action("Index", new { month = ViewBag.CurrentDate.Month, year = ViewBag.CurrentDate.Year + 1 })" class="btn btn-secondary ml-2">Próximo Ano &gt;</a>
            </div>

            <div class="calendar card-body">
                <div class="day bg-light">Dom</div>
                <div class="day bg-light">Seg</div>
                <div class="day bg-light">Ter</div>
                <div class="day bg-light">Qua</div>
                <div class="day bg-light">Qui</div>
                <div class="day bg-light">Sex</div>
                <div class="day bg-light">Sáb</div>

                @for (var day = 1; day <= DateTime.DaysInMonth(ViewBag.CurrentDate.Year, ViewBag.CurrentDate.Month); day++)
                {
                    var date = new DateTime(ViewBag.CurrentDate.Year, ViewBag.CurrentDate.Month, day);
                    var dayName = date.ToString("ddd");
                    var offset = (int)date.DayOfWeek; // Obter o deslocamento para o primeiro dia da semana

                    <div class="day @(date.Date == ViewBag.CurrentDate.Date ? "today" : "")" style="grid-column: @(offset + 1) / span 1;">
                        <span class="day-number">@day</span>
                    </div>
                }
            </div>


        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
